<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="48dp" android:theme="@style/AppTheme">
    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="4dp" android:alpha="0.5"
               android:scaleType="centerInside" app:srcCompat="@drawable/ic_query_builder_white_24dp" />
    <TextView android:id="@android:id/text1" android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="?attr/selectableItemBackground" android:gravity="center_vertical" android:maxLines="1"
              android:paddingLeft="48dp" android:paddingRight="48dp" android:textColor="@android:color/white"
              android:textSize="18sp" />
    <ImageView android:id="@+id/edit_query" android:layout_width="48dp" android:layout_height="48dp"
               android:layout_gravity="right" android:alpha="0.7"
               android:background="?attr/selectableItemBackgroundBorderless" android:padding="4dp"
               android:scaleType="centerInside" app:srcCompat="@drawable/abc_ic_commit_search_api_mtrl_alpha" />
</FrameLayout>