<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical">

    <TextView android:id="@+id/notify" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="?attr/topicTitleColor" android:textColor="?attr/topicTitleBackgroundColor"
              android:padding="@dimen/spacer"
              android:visibility="gone" />

    <TextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/comment_padding" android:lineSpacingExtra="3dp"
              android:textColor="?attr/topicTitleColor" />

    <com.google.android.flexbox.FlexboxLayout android:id="@+id/topic_tags" android:layout_width="match_parent"
                                              android:layout_height="wrap_content" app:flexWrap="wrap" />
</LinearLayout>