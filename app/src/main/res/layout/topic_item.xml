<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

        <TextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Topic" />

        <TextView android:id="@+id/author" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="3dp" android:layout_marginBottom="2dp"
                  android:ellipsize="end" android:maxLines="1" android:text="Author" />

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/comments" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:text="0 ความคิดเห็น" />
            <TextView android:id="@+id/timestamp" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/comments" android:ellipsize="end" android:maxLines="1"
                      android:text="few minutes ago" />
        </RelativeLayout>

</LinearLayout>