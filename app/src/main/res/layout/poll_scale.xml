<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp">
        <TextView android:id="@+id/min_text" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1" android:ellipsize="end" android:maxLines="1" />
        <TextView android:id="@+id/max_text" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1" android:ellipsize="end" android:gravity="right" android:maxLines="1" />
    </LinearLayout>
    <RadioGroup android:id="@+id/scores" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" />
</merge>