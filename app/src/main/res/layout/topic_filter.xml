<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:background="@color/colorPrimary"
                      android:scrollbars="none" android:theme="@style/AppTheme">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:orientation="horizontal" android:paddingLeft="8dp"
                  android:paddingRight="8dp">
        <ImageView android:id="@+id/best_topic" style="?attr/toolbarNavigationButtonStyle"
                   android:layout_width="@dimen/topic_filter" android:layout_height="@dimen/topic_filter"
                   android:layout_marginLeft="4dp"
                   android:layout_marginRight="2dp"
                   android:padding="2dp" android:scaleType="fitCenter" app:srcCompat="@drawable/ic_best_topic" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_all" style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="3dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="2dp"
                                         android:scaleType="fitCenter" android:src="@drawable/ic_topic_all" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_chat" style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="2dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="2dp"
                                         android:scaleType="fitCenter" android:src="@drawable/topic_chat" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_question"
                                         style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="7dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="2dp"
                                         android:scaleType="fitCenter" android:src="@drawable/topic_question" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_news" style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="6dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="2dp"
                                         android:scaleType="fitCenter" android:src="@drawable/topic_news" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_poll" style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="8dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="2dp"
                                         android:scaleType="fitCenter" android:src="@drawable/topic_poll" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_review" style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="6dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="2dp"
                                         android:scaleType="fitCenter" android:src="@drawable/topic_review" />

        <tarn.pantip.widget.FilterButton android:id="@+id/topic_type_shop" style="?attr/toolbarNavigationButtonStyle"
                                         android:layout_width="@dimen/topic_filter"
                                         android:layout_height="@dimen/topic_filter" android:padding="6dp"
                                         android:layout_marginLeft="2dp"
                                         android:layout_marginRight="4dp"
                                         android:scaleType="fitCenter" android:src="@drawable/topic_trade" />
    </LinearLayout>

</HorizontalScrollView>